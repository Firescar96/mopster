<button type="button" class="btn btn-default" data-toggle="modal" data-target="#add-url">
  Add Stream URL
</button>

<div class="modal fade" id="add-url" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Enter Stream URL</h4>
      </div>
      <div class="modal-body">
        <form class="form-inline" {{action "add" on="submit"}}>
          <div class="input-group">
            {{input class="form-control" required="required" placeholder="http://radio.rockserwis.fm/live" value=url}}
            <span class="input-group-btn" style="width:1%">
              <button type="submit" class="btn btn-default">Add</button>
            </span>
          </div>
        </form>

        {{#if streamUris}}<hr>{{/if}}
        <table class="table-condensed">
          <tbody>
            {{#each streamUris as |uri|}}
              <tr>
                <td>{{uri}}</td>
                <td>
                  <button class="btn btn-default btn-xs" {{action "addUri" uri}}>Add to queue</button>
                  <button class="btn btn-danger btn-xs" {{action "remove" uri}}>Remove</button>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
