{{#if errorMessage}}
  <div class="alert alert-danger">{{errorMessage}}</div>
{{/if}}

<form class="form-inline" {{action "search" on="submit"}}>
  <div class="form-group">
    {{input value=query class="form-control"}}
  </div>
  <button type="submit" class="btn btn-default" {{bind-attr disabled="isSearching"}}>
    Search <span {{bind-attr class=":glyphicon :glyphicon-refresh isSearching::hidden"}}></span>
  </button>
</form>

<div class="row">
  <div class="col-md-2">
    <h3>Artists</h3>
    <ul class="list-unstyled">
      {{#each artist in artists}}
        <li>{{#link-to "albums" artist.uri}}{{artist.name}}{{/link-to}}</li>
      {{/each}}
    </ul>
  </div>
  <div class="col-md-4">
    <h3>Albums</h3>
    <ul class="list-unstyled">
      {{#each album in albums}}
        <li>{{#link-to "albums" album.uri}}{{album.artists.0.name}} - {{album.name}}{{/link-to}}</li>
      {{/each}}
    </ul>
  </div>
  <div class="col-md-6">
    <h3>Tracks</h3>
    <ul class="list-unstyled">
      {{#each track in tracks}}
        <li>{{#link-to "albums" track.uri}}{{track.artists.0.name}} - {{track.album.name}} - {{track.name}}{{/link-to}}</li>
      {{/each}}
    </ul>
  </div>
</div>
